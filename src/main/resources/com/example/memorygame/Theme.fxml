<AnchorPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.memorygame.ThemeController">
   <children>
      <VBox layoutX="413.0" layoutY="139.0" prefHeight="650.0" prefWidth="1000.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" alignment="CENTER">
         <children>
            <!-- Main Menu Buttons -->
               <Label text="Choose Theme" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #abb2bf;" />

               <GridPane hgap="20" vgap="20" alignment="CENTER">
                  <Button prefWidth="200.0" text="Theme 1" onAction="#handleStartLevel1" GridPane.rowIndex="0" GridPane.columnIndex="0"/> 
                  <Button prefWidth="200.0" text="Theme 2" onAction="#handleStartLevel2" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                  <Button prefWidth="200.0" text="Theme 3" onAction="#handleStartLevel3" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                  <Button prefWidth="200.0" text="Theme 4" onAction="#handleStartLevel4" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
               </GridPane>

                  <Button text="Add Card Set" onAction="#addCardSet" />
                  <Button mnemonicParsing="false" onAction="#handleBackToMainMenu" prefWidth="200.0" text="Back" />

            
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
